---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Footer from '../components/estructura/Footer.astro';
import Header from '../components/estructura/Header.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/public/Image/favicon/favicon.ico" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900">
		<Header/>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>

